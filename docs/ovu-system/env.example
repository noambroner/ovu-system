# OVU System Environment Variables
# Copy this file to .env and update with your values

# Environment
NODE_ENV=development
DEBUG=true

# Database
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=ovu_user
DATABASE_PASSWORD=ovu_pass_2024
DATABASE_NAME=ovu_main_db

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=ovu_redis_pass_2024
REDIS_DB=0

# RabbitMQ
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=ovu_rabbit
RABBITMQ_PASSWORD=ovu_rabbit_pass_2024
RABBITMQ_VHOST=ovu_vhost

# ULM Service
ULM_SECRET_KEY=your-ulm-secret-key-change-in-production
ULM_DATABASE_NAME=ulm_db
ULM_PORT=8001
ULM_FRONTEND_PORT=3001

# AAM Service
AAM_SECRET_KEY=your-aam-secret-key-change-in-production
AAM_DATABASE_NAME=aam_db
AAM_PORT=8002
AAM_FRONTEND_PORT=3002

# JWT Settings
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Settings (Development uses Mailhog)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@ovu.co.il
SMTP_FROM_NAME=OVU System

# Frontend URLs
FRONTEND_URL=http://localhost
PASSWORD_RESET_URL=http://localhost/reset-password
EMAIL_VERIFICATION_URL=http://localhost/verify-email

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://ulm.localhost,http://aam.localhost

# API Keys
API_RATE_LIMIT=100/minute
LOGIN_RATE_LIMIT=5/minute
REGISTER_RATE_LIMIT=3/hour

# Sentry (Optional - for error tracking)
SENTRY_DSN=

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth (Optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
ENCRYPTION_KEY=your-encryption-key-32-chars-long!!
MFA_ISSUER_NAME=OVU System
SESSION_COOKIE_SECURE=false  # Set to true in production with HTTPS
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax

# Development Tools
HOT_RELOAD=true
SHOW_SQL_QUERIES=false

# Production URLs (update for production)
PRODUCTION_DOMAIN=ovu.co.il
ULM_PRODUCTION_URL=https://ulm.ovu.co.il
AAM_PRODUCTION_URL=https://aam.ovu.co.il
